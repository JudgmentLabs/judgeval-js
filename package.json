{
  "name": "judgeval",
  "version": "0.5.0",
  "description": "JavaScript/TypeScript client for Judgment evaluation platform",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./umd": "./dist/index.umd.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run check && bun run build:types && bun scripts/build.ts lib cjs umd",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lib": "bun scripts/build.ts lib",
    "build:cjs": "bun scripts/build.ts cjs",
    "build:umd": "bun scripts/build.ts umd",
    "build:dev": "bun run build:types && bun scripts/build.ts lib --dev",
    "check": "tsc --noEmit && eslint src/**/*.ts --no-warn-ignored",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix --no-warn-ignored",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-client": "bunx tsx scripts/generate-client.ts && bun run format",
    "test": "bun test",
    "clean": "rimraf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "judgment",
    "evaluation",
    "ai",
    "llm",
    "tracing",
    "opentelemetry",
    "typescript"
  ],
  "author": "Judgment Labs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/JudgmentLabs/judgeval-js.git"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/sdk-trace-web": "^2.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
