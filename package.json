{
  "name": "judgeval",
  "version": "0.4.0",
  "description": "JavaScript/TypeScript client for Judgment evaluation platform",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./umd": "./dist/index.umd.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run check && bun run build:types && bun scripts/build.ts lib umd",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lib": "bun scripts/build.ts lib",
    "build:umd": "bun scripts/build.ts umd",
    "build:dev": "bun run build:types && bun scripts/build.ts lib --dev",
    "check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-client": "bunx tsx scripts/generate-client.ts && bun run format",
    "test": "bunx tsx test.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "judgment",
    "evaluation",
    "ai",
    "llm",
    "tracing",
    "opentelemetry",
    "typescript"
  ],
  "author": "Judgment Labs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/JudgmentLabs/judgeval-js.git"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/sdk-trace-web": "^2.1.0"
  },
  "devDependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "dotenv": "^17.2.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
